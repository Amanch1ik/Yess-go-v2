<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="YessGoFront.Views.WalletPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#F4F6F8">

	<Grid RowDefinitions="Auto,*,Auto">

		<!-- Шапка с градиентом и кнопкой Back -->
		<Grid Row="0">
			<Border StrokeThickness="0" Padding="16,12,16,12">
				<Border.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
						<GradientStop Color="#0A7A5F" Offset="0.0"/>
						<GradientStop Color="#0BB07B" Offset="1.0"/>
					</LinearGradientBrush>
				</Border.Background>

				<Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
					<!-- Кнопка назад — круглой формы, слева -->
					<Grid Column="0" HorizontalOptions="Start">
						<Border WidthRequest="36" HeightRequest="36"
                                BackgroundColor="#FFFFFF22"
                                StrokeThickness="0">
							<Border.StrokeShape>
								<RoundRectangle CornerRadius="18"/>
							</Border.StrokeShape>
							<ImageButton Source="icon_back.png"
                                         BackgroundColor="Transparent"
                                         Padding="0"
                                         Clicked="OnBackClicked"
                                         HorizontalOptions="Center"
                                         VerticalOptions="Center"/>
						</Border>
					</Grid>

					<!-- Опционально: заголовок по центру (если нужен) -->
					<!-- <Label Grid.Column="1" Text="Кошелёк" TextColor="White" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/> -->

					<!-- Пустой заполнитель справа -->
					<BoxView Grid.Column="2" Opacity="0" WidthRequest="36"/>
				</Grid>
			</Border>
		</Grid>

		<!-- Основной контент (фон — светлый; карточки — как в макете) -->
		<Grid Row="1" Padding="16,12,16,12">
			<ScrollView>
				<VerticalStackLayout Spacing="14">

					<!-- Балансная карточка -->
					<Frame BackgroundColor="White" CornerRadius="16" HasShadow="False" Padding="14">
						<Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" ColumnSpacing="12">
							<Label Text="Ваш баланс" TextColor="#6B7280" FontSize="12"/>
							<Image Source="coin.png" Grid.RowSpan="2" Grid.Column="1" WidthRequest="36" HeightRequest="36" VerticalOptions="Center"/>

							<HorizontalStackLayout Grid.Row="1" Spacing="8" VerticalOptions="End">
								<Label Text="55.7" FontSize="32" FontAttributes="Bold" TextColor="#0F6B53"/>
								<Frame BackgroundColor="#E6F5EF" CornerRadius="10" Padding="10,4" HasShadow="False">
									<Label Text="Yess!Coin" TextColor="#0F6B53" FontAttributes="Bold" FontSize="12"/>
								</Frame>
							</HorizontalStackLayout>
						</Grid>
					</Frame>

					<!-- Ранг / инфо карточки -->
					<HorizontalStackLayout Spacing="12">
						<Frame BackgroundColor="White" CornerRadius="16" HasShadow="False" Padding="12" HeightRequest="112">
							<VerticalStackLayout Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
								<Image Source="badge_bronze.png" HeightRequest="38"/>
								<Label Text="Бронза" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#0F6B53"/>
								<Label Text="Уровни" FontSize="12" TextColor="#6B7280" HorizontalTextAlignment="Center"/>
							</VerticalStackLayout>
						</Frame>

						<Frame BackgroundColor="White" CornerRadius="16" HasShadow="False" Padding="12" HeightRequest="112" WidthRequest="180">
							<VerticalStackLayout Spacing="8" VerticalOptions="Center">
								<Label Text="Что такое йесскоины" TextColor="#0F6B53" FontAttributes="Bold"/>
								<Button Text="Посмотреть"
                                        BackgroundColor="#0F6B53"
                                        TextColor="White"
                                        CornerRadius="12"
                                        Padding="12,6"
                                        Clicked="OnAboutCoinsClicked"/>
							</VerticalStackLayout>
						</Frame>
					</HorizontalStackLayout>

					<!-- Адреса партнёров -->
					<Frame BackgroundColor="White" CornerRadius="16" HasShadow="False" Padding="12">
						<VerticalStackLayout Spacing="8" VerticalOptions="Center">
							<HorizontalStackLayout Spacing="8">
								<Image Source="icon_location.png" WidthRequest="20" HeightRequest="20"/>
								<Label Text="Адреса наших партнёров" TextColor="#0F6B53" FontAttributes="Bold"/>
							</HorizontalStackLayout>
							<Frame BackgroundColor="#E6F5EF" Padding="10,4" CornerRadius="12" HasShadow="False">
								<Label Text="1 Адрес" TextColor="#0F6B53" FontAttributes="Bold" FontSize="12" HorizontalTextAlignment="Center"/>
							</Frame>
						</VerticalStackLayout>
					</Frame>

					<!-- Промокод -->
					<Frame BackgroundColor="White" CornerRadius="16" HasShadow="False" Padding="12">
						<VerticalStackLayout Spacing="8">
							<Label Text="Промокод" TextColor="#0F6B53" FontAttributes="Bold"/>
							<Entry x:Name="PromoEntry"
                                   Placeholder="Введите промокод"
                                   TextColor="#111827"
                                   PlaceholderColor="#9CA3AF"/>
						</VerticalStackLayout>
					</Frame>

					<!-- Выбор суммы -->
					<Frame BackgroundColor="White" CornerRadius="16" HasShadow="False" Padding="12">
						<VerticalStackLayout Spacing="8">
							<Label Text="Выберите сумму пополнения:" TextColor="#0F6B53" FontAttributes="Bold" />
							<Grid ColumnDefinitions="*,Auto" Padding="0,6">
								<Label Text="1000 KGS" TextColor="#111827"/>
								<RadioButton GroupName="topup" Grid.Column="1" VerticalOptions="Center" />
							</Grid>
							<BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>
							<Grid ColumnDefinitions="*,Auto" Padding="0,6">
								<Label Text="800 KGS" TextColor="#111827"/>
								<RadioButton GroupName="topup" Grid.Column="1" VerticalOptions="Center" />
							</Grid>
							<BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>
							<Grid ColumnDefinitions="*,Auto" Padding="0,6">
								<Label Text="600 KGS" TextColor="#111827"/>
								<RadioButton GroupName="topup" Grid.Column="1" VerticalOptions="Center" />
							</Grid>
							<BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>
							<Grid ColumnDefinitions="*,Auto" Padding="0,6">
								<Label Text="500 KGS" TextColor="#111827"/>
								<RadioButton GroupName="topup" Grid.Column="1" VerticalOptions="Center" />
							</Grid>
							<BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>
							<Grid ColumnDefinitions="*,Auto" Padding="0,6">
								<Label Text="300 KGS" TextColor="#111827"/>
								<RadioButton GroupName="topup" Grid.Column="1" VerticalOptions="Center" />
							</Grid>
							<BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>
							<Grid ColumnDefinitions="*,Auto" Padding="0,6">
								<Label Text="100 KGS" TextColor="#111827"/>
								<RadioButton GroupName="topup" Grid.Column="1" IsChecked="True" VerticalOptions="Center" />
							</Grid>
							<BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>
							<Grid ColumnDefinitions="*,Auto" Padding="0,6">
								<Label Text="Другая сумма" TextColor="#111827"/>
								<RadioButton GroupName="topup" Grid.Column="1" VerticalOptions="Center" />
							</Grid>
						</VerticalStackLayout>
					</Frame>

					<BoxView HeightRequest="8" Opacity="0"/>

				</VerticalStackLayout>
			</ScrollView>
		</Grid>

		<!-- Кнопка «Пополнить» фиксирована внизу -->
		<Grid Row="2" Padding="16,8,16,18">
			<Button Text="Пополнить"
                    HeightRequest="52"
                    CornerRadius="26"
                    FontAttributes="Bold"
                    BackgroundColor="#0B4A3B"
                    TextColor="White"
                    Clicked="OnTopUpClicked"/>
		</Grid>

	</Grid>
</ContentPage>
