<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="YessGoFront.Views.Controls.BottomNavBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Нижняя панель навигации -->
    <Grid BackgroundColor="#F8F8F8"
          Padding="16,8,16,24"
          ColumnDefinitions="*,*,*,*,*"
          RowDefinitions="Auto">

        <!-- Главная -->
        <VerticalStackLayout Grid.Column="0"
                             Spacing="4"
                             HorizontalOptions="Center">
            <Image x:Name="HomeIcon"
                   Source="nav_home.png"
                   WidthRequest="28"
                   HeightRequest="28" />
            <Label x:Name="HomeText"
                   Text="Главная"
                   FontSize="10"
                   TextColor="#6B6B6B"
                   HorizontalTextAlignment="Center"/>
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnHomeTapped"/>
            </VerticalStackLayout.GestureRecognizers>
        </VerticalStackLayout>

        <!-- Партнёры -->
        <VerticalStackLayout Grid.Column="1"
                             Spacing="4"
                             HorizontalOptions="Center">
            <Image x:Name="PartnerIcon"
                   Source="nav_partners.png"
                   WidthRequest="28"
                   HeightRequest="28" />
            <Label x:Name="PartnerText"
                   Text="Партнёры"
                   FontSize="10"
                   TextColor="#6B6B6B"
                   HorizontalTextAlignment="Center"/>
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnPartnerTapped"/>
            </VerticalStackLayout.GestureRecognizers>
        </VerticalStackLayout>

        <!-- QR -->
        <VerticalStackLayout Grid.Column="2"
                             Spacing="4"
                             HorizontalOptions="Center">
            <Image x:Name="QrIcon"
                   Source="nav_qr.png"
                   WidthRequest="36"
                   HeightRequest="36" />
            <Label x:Name="QrText"
                   Text="QR"
                   FontSize="10"
                   TextColor="#6B6B6B"
                   HorizontalTextAlignment="Center"/>
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnQrTapped"/>
            </VerticalStackLayout.GestureRecognizers>
        </VerticalStackLayout>

        <!-- Уведомления -->
        <VerticalStackLayout Grid.Column="3"
                             Spacing="4"
                             HorizontalOptions="Center">
            <Image x:Name="BellIcon"
                   Source="nav_notification.png"
                   WidthRequest="28"
                   HeightRequest="28" />
            <Label x:Name="BellText"
                   Text="Уведомления"
                   FontSize="10"
                   TextColor="#6B6B6B"
                   HorizontalTextAlignment="Center"/>
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnNotificationsTapped"/>
            </VerticalStackLayout.GestureRecognizers>
        </VerticalStackLayout>

        <!-- Ещё -->
        <VerticalStackLayout Grid.Column="4"
                             Spacing="4"
                             HorizontalOptions="Center">
            <Image x:Name="MoreIcon"
                   Source="nav_more.png"
                   WidthRequest="28"
                   HeightRequest="28" />
            <Label x:Name="MoreText"
                   Text="Ещё"
                   FontSize="10"
                   TextColor="#6B6B6B"
                   HorizontalTextAlignment="Center"/>
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnMoreTapped"/>
            </VerticalStackLayout.GestureRecognizers>
        </VerticalStackLayout>

    </Grid>
</ContentView>
