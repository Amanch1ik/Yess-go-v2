<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="YessGoFront.Views.PartnerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:YessGoFront.Views.Controls"
    BackgroundColor="#F4F5F6">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Поиск -->
        <SearchBar Placeholder="Поиск по компаниям"
                   Margin="16,8,16,0"
                   BackgroundColor="White"
                   HeightRequest="40"
                   VerticalOptions="Center" />

        <!-- Категории -->
        <ScrollView Grid.Row="1"
                    Margin="0,8,0,0"
                    Orientation="Horizontal"
                    HorizontalScrollBarVisibility="Never">
            <CollectionView x:Name="CategoriesCollection"
                            ItemsLayout="VerticalGrid,3"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"
                            SelectionMode="None"
                            Margin="12,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               WidthRequest="110"
                               HeightRequest="125"
                               CornerRadius="16"
                               HasShadow="False"
                               BackgroundColor="White"
                               Margin="8"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Tapped="Category_Tapped"
                                    CommandParameter="{Binding Name}" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="8"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center">
                                <Image Source="{Binding Image}"
                                       WidthRequest="65"
                                       HeightRequest="65"
                                       Aspect="AspectFit" />
                                <Label Text="{Binding Name}"
                                       FontSize="13"
                                       HorizontalTextAlignment="Center"
                                       TextColor="Black"
                                       LineBreakMode="TailTruncation"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Нижняя панель навигации -->
        <controls:BottomNavBar x:Name="BottomBar"
                               Grid.Row="2"
                               Margin="0,4,0,0" />
    </Grid>
</ContentPage>
