<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="YessGoFront.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:YessGoFront.Views">

    <!-- Экран входа -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Карта -->
    <ShellContent
        Route="MapPage"
        ContentTemplate="{DataTemplate views:MapPage}" />

    <!-- Экран регистрации -->
    <ShellContent
        Route="register"
        ContentTemplate="{DataTemplate views:RegisterPage}" />

    <!-- Основное приложение -->
    <!-- 🔹 Отключаем системную TabBar, т.к. используется кастомный BottomNavBar -->
    <TabBar Route="main" Shell.TabBarIsVisible="False">

        <Tab Route="home">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>

        <Tab Route="partner">
            <ShellContent ContentTemplate="{DataTemplate views:PartnerPage}" />
        </Tab>

        <Tab Route="wallet">
            <ShellContent ContentTemplate="{DataTemplate views:WalletPage}" />
        </Tab>

        <Tab Route="qr">
            <ShellContent ContentTemplate="{DataTemplate views:QrPage}" />
        </Tab>

        <Tab Route="notifications">
            <ShellContent ContentTemplate="{DataTemplate views:NotificationsPage}" />
        </Tab>

        <Tab Route="more">
            <ShellContent ContentTemplate="{DataTemplate views:MorePage}" />
        </Tab>
    </TabBar>

    <!-- 🔹 Страница списка партнёров -->
    <ShellContent
        Route="PartnersListPage"
        ContentTemplate="{DataTemplate views:PartnersListPage}" />

</Shell>
