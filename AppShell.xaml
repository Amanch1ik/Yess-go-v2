<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="YessGoFront.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:YessGoFront.Views">

    <TabBar Shell.TabBarIsVisible="False">
        <Tab Route="home">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Route="partner">
            <ShellContent ContentTemplate="{DataTemplate views:PartnerPage}" />
        </Tab>
        <Tab Route="qr">
            <ShellContent ContentTemplate="{DataTemplate views:QrPage}" />
        </Tab>
        <Tab Route="notifications">
            <ShellContent ContentTemplate="{DataTemplate views:NotificationsPage}" />
        </Tab>
        <Tab Route="more">
            <ShellContent ContentTemplate="{DataTemplate views:MorePage}" />
        </Tab>
    </TabBar>
</Shell>
